<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.abookt">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ABookT">
        <activity android:name=".CurrentlyReadingActivity" android:label="Currently reading"></activity>
        <activity android:name=".FavoriteBooksActivity" android:label="Favorites" />
        <activity android:name=".ReadListActivity" android:label="Readlist" />
        <activity android:name=".AlreadyReadBooksActivity" android:label="Already read books" />
        <activity android:name=".BookActivity" />
        <activity android:name=".AllBooksActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>